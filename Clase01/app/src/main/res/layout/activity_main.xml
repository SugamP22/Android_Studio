<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Â¿Are You the best?"
    android:textColor="@color/black"
    android:textSize="30sp"
    android:gravity="center"
    android:textStyle="bold"
    android:id="@+id/TitleMainFrame"
    tools:ignore="HardcodedText" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Yes"
        android:layout_below="@+id/TitleMainFrame"
        android:id="@+id/yesButtonMainFrame"
        android:onClick="onClickYes"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/NoButtonMainFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="No"
        android:layout_below="@+id/yesButtonMainFrame"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@null"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:onClick="onClickNO"
        tools:ignore="HardcodedText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/thirdButtonMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Change Color"
        android:layout_below="@+id/NoButtonMainFrame"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@null"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:onClick="OnClickThrid"
        tools:ignore="HardcodedText"/>







</RelativeLayout>